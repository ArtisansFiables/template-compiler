{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "downlevelIteration": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
